    {
      "id": "btdf-project-updater-task",
      "type": "ms.vss-distributed-task.task",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "properties": {
        "name": "BTDFProjectUpdater"
      }
    }
  ],
  "files": [
    {
      "path": "images",
